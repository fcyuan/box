::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
page{
  width: 100%;
  height:100%;
  background: #fff;
  }
.ad{
  width: 750rpx;
  height: 250rpx;
}
.ad_img{
  width: 750rpx;
  height: 250rpx;
}
.swiper-tab{
  width: 96%; 
  text-align: center; 
  line-height: 80rpx;
  display: flex;
  margin-left: auto;
  margin-right: auto;
}
.swiper-tab-list{
  height: 70rpx;
  font-size: 30rpx; 
  display: inline-block; 
  flex: 1;
  color: #333333; 
}
.on{
  color: #fba029; 
  border-bottom: 2rpx solid #fba029;
  font-weight: bold;
}
.swiper-box{ 
display: block; 
z-index: 1 ;
width: 100%;
background:#fff;
height: 92%;
position: fixed;
top: 80rpx;
overflow: hidden;

 }
.swiper-box view{ 
  text-align: center; 
}
