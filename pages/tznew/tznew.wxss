page{
  width: 100%;
  height: 100%
}
.yzy_box{
  width:100%;
  height: 100%;
  background:gray;
  position: relative;
}
.yzy_small{
  width: 500rpx;
  height: 650rpx;
  position: absolute;
  top: 150rpx;
  left: 0;
  right: 0;
  margin-left: auto;
  margin-right: auto;
  background: #fff
}
.yzy_img{
  width: 300rpx;
  height: 300rpx;
  position: absolute;
  left: 0;right: 0;
  margin-left: auto;
  margin-right: auto;
  top: 100rpx;
}
.imgs{
  width: 300rpx;
  height: 300rpx;
  border-radius: 15rpx
}
.yzy_name{
  width: 80%;
  text-align: center;
  margin-left: auto;
  margin-right: auto;
  position: absolute;
  left: 0;right: 0;
  top: 30rpx;
  font-weight: bold;
  font-size: 40rpx;
}
.yzy_desc{
  width: 80%;
  height: 80rpx;
  text-align: center;
  margin-left: auto;
  margin-right: auto;
  position: absolute;
  left: 0;right: 0;
  top: 430rpx;
  font-size: 26rpx;
  overflow: hidden;
}
.btn{
  width: 380rpx;
  height: 80rpx;
  text-align: center;
  margin-left: auto;
  margin-right: auto;
  line-height: 80rpx;
  color: #fff;
  position: absolute;
  left: 0;right: 0;
  top: 530rpx;
  font-size: 38rpx;
  border-radius: 50rpx;
  background: green;
}
.fh_btn{
  width: 120rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  color: #fff;
  background:firebrick;
  position: absolute;
  top: 100rpx;
  right: 120rpx;
  font-size: 24rpx;
  border-radius: 15rpx;
}